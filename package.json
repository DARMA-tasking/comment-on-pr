{
  "name": "comment-on-pr",
  "version": "1.0.0",
  "description": "GitHub Action to put new or edit existing comment in PR thread ",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/main.ts --source-map --license licenses.txt",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "all": "npm run build && npm run format && npm run lint"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DARMA-tasking/comment-on-pr.git"
  },
  "bugs": {
    "url": "https://github.com/DARMA-tasking/comment-on-pr/issues"
  },
  "homepage": "https://github.com/DARMA-tasking/comment-on-pr#readme",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/github": "^5.0.1",
    "@vercel/ncc": "^0.33.4"
  },
  "devDependencies": {
    "@types/node": "^17.0.25",
    "@typescript-eslint/parser": "^5.20.0",
    "eslint": "^8.13.0",
    "eslint-plugin-github": "^4.3.6",
    "prettier": "^2.6.2",
    "typescript": "^4.6.3"
  }
}
